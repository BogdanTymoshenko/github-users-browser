<resources>

    <style name="GHUsersBrowserTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="GHUsersBrowserTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="GHUsersBrowserTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="GHUsersBrowserTheme.NoActionBar.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="GHUsersBrowserTheme.NoActionBar.PopupOverlay"
           parent="ThemeOverlay.AppCompat.Light"/>

    <style name="GHUsersBrowser.TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium"/>
    <style name="GHUsersBrowser.TextAppearance.Small" parent="TextAppearance.AppCompat.Small"/>

    <style name="GHUsersBrowser.TextAppearance.Counter" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
